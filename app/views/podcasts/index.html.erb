<div class="">
  <% if @podcasts.empty? %>
  <h2 class="">Sorry, no results found!</h2>
  <% else %>
  <h2><%= "Search results for: #{@query}" %></h2>
  <p><%= "#{@pagy.count} results found" %></p>
  <% end %>
</div>

<div data-controller="index" data-index-target="container">
  <%= render partial: "podcast-list", locals: {podcasts: @podcasts} %>
</div>

  <button 
    data-controller="index"
    data-action="index#loadMore" 
    data-index-target="button"
    data-index-current-value="1"
    data-index-total-value=<%= @pagy.pages %>
    data-index-url-value=<%= pagy_url_for(@pagy,1) %>
  >Load More!
  </button>
