<div class="">
  <% if @podcasts.empty? %>
  <h2 class="">Sorry, no results found!</h2>
  <% else %>
  <h2><%= "Search results for: #{@query}" %></h2>
  <p><%= "#{@pagy.count} results found" %></p>
  <% end %>
</div>

<div data-controller="index" data-index-target="container">
  <% @podcasts.each do |podcast| %>
    <%= render partial: "podcast-card", locals: {podcast: podcast} %>
  <% end %>
  <%== pagy_nav @pagy %>
  <button data-action="click->index#loadMore" data-index-target="button">Load More!</button>
</div>
